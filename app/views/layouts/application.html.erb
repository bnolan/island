<!DOCTYPE html>
<html>
<head>
  <title>Island</title>
  <%= include_stylesheets :web, :media => 'screen' %>
  <%= include_javascripts :web, :web_templates %>
  <script src="/javascripts/codemirror/codemirror.js" type="text/javascript"></script>
  <script src="/javascripts/codemirror/mirrorframe.js" type="text/javascript"></script>
  <%= csrf_meta_tag %>
  <script>
    $ASSETS = <%= Asset.all.to_json(:methods => [:upload_url]).html_safe %>;
